<div class="container" id="loginForm">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Inicia sesión</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control',id:'inputEmail', placeholder: 'Correo' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password",class:'form-control',id:'inputPassword', placeholder:'Contraseña' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="forgot">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordarme' %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Iniciar sesión", class:' btn btn-primary' %>
          <hr/>
          <%= link_to 'Ingreso municipalidad', new_municipality_session_path %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
        
        
      <% end %>
    </div>
  </div>
</div>

