<div class="container" id="loginForm">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Inicia sesión</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control',id:'inputEmail', placeholder: 'Correo' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password",class:'form-control',id:'inputPassword', placeholder:'Contraseña' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="forgot">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordarme' %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Iniciar sesión", class:' btn btn-primary' %>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <a href="<%= omniauth_authorize_path(resource_name, provider)%>"class="btn btn-block btn-social btn-facebook">
                <i class="fab fa-facebook-f"></i> <span>Iniciar con Facebook</span> 
              </a>
            <% end %>
          <% end %>
          <hr/>
          <%= render "devise/shared/links" %>
          <%= link_to 'Ingreso municipalidad', new_municipality_session_path %>
        </div>
        
        
      <% end %>
    </div>
  </div>
</div>

