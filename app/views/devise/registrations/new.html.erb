<div class="container" id="loginForm">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Registrate!</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.text_field :name,autofocus: true,class:'form-control', placeholder: 'Nombre' %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autocomplete: "email",class:'form-control', placeholder: 'Correo' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class:'form-control', placeholder:'Contraseña (6 caractéres mínimo)' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control', placeholder:'Confirmar contraseña' %>
        </div>
        <div class="actions">
          <%= f.submit "Registrarse", class: 'btn btn-primary btn-sm' %>
        </div>
        <hr/>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
