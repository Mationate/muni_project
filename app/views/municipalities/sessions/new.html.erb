<div class="container" id="loginForm">
  <div class="login-form">
    <div class="main-div">
      <div class="panel">
        <h2>Municipalidades</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control',id:'inputEmail', placeholder: 'Correo' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password",class:'form-control',id:'inputPassword', placeholder:'ContraseÃ±a' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="forgot">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordarme' %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Iniciar sesiÃ³n", class:' btn btn-primary btn-sm' %>
        </div>
        <hr/>
        <%= render "municipalities/shared/links" %>
      <% end %>
    </div>
  </div>
</div>


